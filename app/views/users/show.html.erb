<div class="container">
  <div class="header">
    <h2> Welcome <%= "#{@user.first_name} #{@user.last_name}" %></h2>
    <p>
      <%= @user.username %>
    </p>
  </div>

  <% @user.recievers.each do |reciever| %>
    <div class="card">
      <div class="card-body">
        <p>
          You will be giving to <%= "#{reciever.user.first_name} #{reciever.user.last_name}" %>
        </p>
      </div>
    </div>
  <% end %>
</div>
