  <div class="header">
    <h2> Welcome <%= "#{@user.first_name} #{@user.last_name}" %></h2>
    <p>
      <%= @user.username %>
    </p>
  </div>

  <% if @user.reciever %>
    <div class="card">
      <div class="card-body">
        <p>
          You will be giving to <%= "#{@user.reciever.first_name} #{@user.reciever.last_name}" %>
        </p>
      </div>
    </div>
  <% end %>
</div>
