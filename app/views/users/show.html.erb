<div class="container">
  <div class="header">
    <h2> Hi <%= "#{current_user.first_name} #{current_user.last_name}!" %></h2>
    <p>
      <%= current_user.username %>
    </p>
  </div>

  <% current_user.recievers.each do |reciever| %>
    <%= link_to occasion_path(reciever.occasion) do %>
      <div class="card" style="color:black; text-decoration:none">
        <div class="card-body">
          <div class="card">
            <div class="card-title">
              <%= "#{reciever.occasion.title} #{reciever.occasion.year}" %>
            </div>
            <div class="card-body">
              Woo hoo! You get to give <span style="font-weight:bold"><%="#{reciever.user.first_name} #{reciever.user.last_name}" %></span> a gift on this special occasion!
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
