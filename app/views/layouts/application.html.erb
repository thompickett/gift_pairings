<!DOCTYPE html>
<html>
  <head>
    <title>GiftPairings</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>  </head>

  <body>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Folded Paper</a>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li><%= link_to "Update Your Information", edit_user_path(current_user), class: "nav-item nav-link" %></li>
            <li><%= link_to "Logout", logout_path, method: :delete, class: "nav-item nav-link" %></li>
          <% else %>
            <li><%= link_to "Login", login_path, class: "nav-item nav-link" %></li>
          <% end %>
        </ul>
      </nav>

      <% flash.each do |key, value| %>
        <div class=flash_<%= key %> >
          <%= content_tag(:div, sanitize(value), class: "alert alert-#{key}") %>
        </div>
      <% end %>
      <%= yield %>
  </body>
</html>
